/* components/news-tab/index.wxss */
.container{
  display: flex;
  flex-direction: column;
  margin-top: 100rpx;
}
.title{
  margin-top: 10rpx;
  margin-left: 20rpx;
  color: #000000DD;
  font-size: 44rpx;
  font-weight: bold;
}

.card{
  display: flex;
  flex-direction: column;
  background-color: #EDEDED;
  margin: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 8rpx;
}

.image{
  width: 100%;
  height: 280rpx;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  margin-bottom: 10rpx;
}

.content{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #333333;
}